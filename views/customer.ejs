      <form action="/customer/updateCustomer/<%=customer._id%>?_method=PUT" enctype="multipart/form-data" method="POST" class="mx-12">
        <div class="shadow sm:overflow-hidden sm:rounded-md">
          <div class="space-y-6 bg-slate-100 px-4 py-5 sm:p-6">

            <label class="block text-sm font-medium text-gray-700">Photo</label>
            <div class="flex justify-between">
              
              <div class="mt-1 flex items-center">
                
              <% if ( customer.image ) { %>
                <img class="img-fluid  mask mask-squircle w-48 h-48" src="<%= customer.image%>"  />
              <% }else{ %>
                <span class="inline-block h-48 w-48 overflow-hidden rounded-full bg-gray-100">
                  <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                  
                </span>
              <% } %>
        
              </div>
              <div class="mt-1 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <label for="imageUpload" class="form-label relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500">
                      <input id="imageUpload" name="file" type="file" class="bg-gray-100 ">
                    </label>
                  </div>
                  <p class="text-sm text-gray-500">or drag and drop (PNG, JPG, GIF up to 10MB)</p>
                  
                </div>
              </div>
            </div>
          
            <div class="col-span-6 sm:col-span-3">
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input value = <%= customer.name %> type="text" name="name" id="name" class="input-md mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
              <input value = <%= customer.phoneNumber %> type="text" name="phoneNumber" id="phoneNumber" class="input-md mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div>

            <div class="text-base font-medium text-gray-900" aria-hidden="true">
              <span class="text-sm font-medium text-gray-700">Customer is VIP</span>
              <input id="comments" name="comments" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mx-12" <%= customer.vip ? "checked" : ""%>>  
            </div>
               

            <!-- <div class="col-span-6 sm:col-span-4">
              <label for="email-address" class="block text-sm font-medium text-gray-700">Email address</label>
              <input type="text" name="email-address" id="email-address"  class="input-md mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div> -->

            <div>
              <label for="about" class="block text-sm font-medium text-gray-700">About</label>
              <div class="mt-1">
                <textarea  id="about" name="note" placeholder="Add something..." rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" autocomplete=""><%= customer.note %></textarea>
              </div>
              
            </div>

            
            </div>

            <div>
              
          </div>
          <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Save</button>
            <a class="inline-flex justify-center rounded-md border border-transparent bg-gray-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" href="/waitingList">Cancel</a>
          </div>
        </div>
      </form>
    
